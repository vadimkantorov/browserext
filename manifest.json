{
	"manifest_version": 2,
	"name": "zrXiv",
	"version": "0.1",
	"permissions" : ["storage"],
	"content_scripts": [
		{
			"matches": [
				"https://arxiv.org/abs/*"
			],
			"js": ["zrxiv_header.js"],
			"all_frames": true
		}
	],
	"background" : { "scripts": ["zrxiv_background.js"] },
	"browser_action": {
		"default_title": "Open zrXiv"
	},
	"web_accessible_resources": ["zrxiv_header.html", "zrxiv_header.js", "zrxiv_options.js"],
	"options_page" : "zrxiv_options.html",
	"homepage_url" : "https://github.com/vadimkantorov/zrxiv"
}
