{
	"manifest_version": 2,
	"name": "zrxiv",
	"version": "0.1",
	"permissions" : ["storage"],
	"icons" : {"256" : "logo.png"},
	"content_scripts": [
		{
			"matches": [
				"https://arxiv.org/abs/*"
			],
			"js": ["browserext.js", "header.js"],
			"all_frames": true
		}
	],
	"background" : { "scripts": ["background.js"] },
	"browser_action": {
		"default_title": "Open zrxiv"
	},
	"web_accessible_resources": ["header.html", "options.html", "header.js", "options.js"],
	"options_ui" : {"page" : "options.html", "open_in_tab" : false},
	"homepage_url" : "https://github.com/vadimkantorov/zrxiv"
}
