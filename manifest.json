{
	"author": "Vadim Kantorov",
	"manifest_version": 2,
	"name": "zrxiv",
	"version": "0.1",
	"description" : "GitHub-based bibliography manager for arxiv.org",
	"permissions" : ["storage", "https://export.arxiv.org/*", "https://api.github.com/*"],
	"icons" : {"256" : "logo.png"},
	"content_scripts": [
		{
			"matches": ["*://arxiv.org/abs/*", "*://papers.nips.cc/paper/*", "*://openreview.net/forum?id=*"],
			"js": ["browserext.js", "parsers.js", "backend.js", "frontend.js"],
			"all_frames": true
		}
	],
	"background" : { "scripts": ["browserext.js", "background.js"], "persistent": false },
	"browser_action": {
		"default_title": "Open zrxiv",
		"default_icon" : {"256" : "logo.png", "40" : "logo.png"}
	},
	"web_accessible_resources": ["frontend.html", "options.html", "parsers.js", "backend.js", "frontend.js", "options.js"],
	"options_ui" : {"page" : "options.html", "open_in_tab" : false, "browser_style" : true},
	"options_page" : "options.html",
	"homepage_url" : "https://github.com/zrxiv/zrxiv",

	"applications": {
		"gecko": {"id": "vadimkantorov@gmail.com"}
	}
}
